@model FlatMate.Web.Mvc.Base.BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlatMate</title>

    <environment names="Development">
        <link rel="stylesheet" asp-href-include="~/dist/css/**/*.css" />
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/dist/css/flatmate.min.css" asp-append-version="true" />
    </environment>

</head>
<body>
    <header>
        <div class="header-wrapper">
            <div class="page-title">
                <h1>@ViewData["PageTitle"]</h1>
            </div>
            <div class="flex-row nav-toggle">
                <div class="menu-toggle">
                    <label class=" icon-32 icon-burger" for="menu-checkbox"></label>
                </div>

                <div class="welcome-wrapper">
                    @if (Model.CurrentUser != null)
                    {
                        <span class="welcome">Hallo @Model.CurrentUser.UserName!</span>
                    }
                    else
                    {
                        <span class="welcome">Hallo!</span>
                    }
                </div>

            </div>

        </div>
    </header>

    <input id="menu-checkbox" type="checkbox" style="display: none" />

    <nav>
        <ul>
            <li>
                <a asp-area="Home" asp-controller="Dashboard" asp-action="Index">Home</a>
            </li>
            <li>
                <a asp-area="Account" asp-controller="MyProfile" asp-action="Index">Mein Profil</a>
            </li>
            <li>
                <a asp-area="Account" asp-controller="Logout" asp-action="Index">Logout</a>
            </li>
        </ul>
    </nav>

    <main>
        @RenderBody()
    </main>

</body>
</html>