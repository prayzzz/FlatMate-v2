<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FlatMate - @ViewData["Title"]</title>

    <environment names="Development">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,700">

        <link rel="stylesheet" asp-href-include="~/css/**/*.min.css" asp-href-exclude="~/css/flatmate.min.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">

        <link rel="stylesheet" href="~/dist/css/flatmate.min.css" asp-append-version="true" />
    </environment>

</head>
<body>

    <input id="menu-checkbox" type="checkbox" />
    <label class="menu-toggle icon-32 icon-burger" for="menu-checkbox"></label>

    <nav>
        <span class="title">FlatMate</span>
        <ul>
            <li>
                <a asp-area="Home" asp-controller="Dashboard" asp-action="">Übersicht</a>
            </li>
            <li>
                @*<a asp-area="ItemLists" asp-controller="Home" asp-action="">ItemListen</a>*@
            </li>
            <li>
                <a href="#">Angebote</a>
            </li>
            <li>
                <a asp-area="Account" asp-controller="Logout" asp-action="">Logout</a>
            </li>
        </ul>
    </nav>

    <main>
        @RenderBody()
    </main>

</body>
</html>