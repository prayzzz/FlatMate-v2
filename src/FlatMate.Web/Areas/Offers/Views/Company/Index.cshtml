@model FlatMate.Web.Areas.Offers.Data.CompanyIndexVm

@{
    Layout = "_Layout";
    ViewData["Title"] = "Märkte";
    ViewData["PageTitle"] = "Märkte";
    ViewData["MainClass"] = "company-index";
}

<section class="container">

    <div class="row align-right actions">
        <div class="col-auto">
            <a asp-controller="ProductFavorite" asp-action="Manage">Favoriten verwalten</a>
        </div>
    </div>

    <div class="row">

        @foreach (var company in Model.Companies)
        {
            <div class="col-sm-6 col-market">
                <a asp-action="View" asp-controller="Offer" asp-route-companyId="@((int)company.Id)" class="standard-box market-box">
                    @if (!string.IsNullOrEmpty(company.ImagePath))
                    {
                        <div class="image">
                            <img src="@company.ImagePath" style="width:100%" />
                        </div>
                    }
                </a>
            </div>

        }

    </div>



</section>