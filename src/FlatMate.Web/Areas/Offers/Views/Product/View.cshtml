@model FlatMate.Web.Areas.Offers.Data.ProductViewVm

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Product.Name;
    ViewData["PageTitle"] = "Produktdetails";
    ViewData["MainClass"] = "product-view";
}

<section class="container">

    <div class="standard-box product-info-box">

        <div class="row">
            <div class="col col-picture">
                <div class="picture-wrapper">
                    <img src="@Model.Product.ImageUrl?resize=150px:150px" />
                </div>
            </div>
            <div class="col-md col-product-info">
                <div style="font-size:1.5rem;">@Model.Product.Name</div>

                <div>@Model.Product.Description</div>
                <div>@Model.Product.SizeInfo</div>

                <div class="product-price">
                    
                    @if (Model.Offers.Count > 0)
                    {
                        <div><text>Letztes Angebot: @Model.Offers.Last().Price €</text></div>
                    }

                    @if (Model.Product.Price > 0)
                    {
                        <div><text>Letzter Preis: @Model.Product.Price €</text></div>
                    }
                </div>

                <div class="row no-gutters product-actions">
                    @if (Model.IsFavorite)
                    {
                        <div class="col-auto">
                            <a asp-area="Offers" asp-controller="Product" asp-action="Unfavorite" asp-route-id="@Model.Product.Id" class="btn btn-success" title="Als Favorit löschen">
                                <i class="fa fa-heart" aria-hidden="true"></i> Favorisiert
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="col-auto">
                            <a asp-area="Offers" asp-controller="Product" asp-action="Favorite" asp-route-id="@Model.Product.Id" class="btn btn-secondary">
                                <i class="fa fa-heart" aria-hidden="true"></i> Als Favorit
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

    <h3>Im Angebot</h3>
    <div class="standard-box">
        <table>
            <thead>
                <tr>
                    <th width="20%">Von</th>
                    <th width="20%">Bis</th>
                    <th width="20%">Preis</th>
                    <th width="40%">Markt</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var offer in Model.Offers.OrderByDescending(o => o.From))
                {
                    <tr>
                        <td>@offer.From.ToShortDateString()</td>
                        <td>@offer.To.ToShortDateString()</td>
                        <td>@offer.Price €</td>
                        <td><a asp-area="Offers" asp-controller="Market" asp-action="View" asp-route-id="@offer.Market.Id">@offer.Market.Name</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.PriceHistory.Count > 1)
    {
        <h3>Preishistorie</h3>
        <div class="standard-box">
            <table>
                <thead>
                    <tr>
                        <th width="50%">Von</th>
                        <th width="50%">Preis</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var history in Model.PriceHistory.OrderByDescending(p => p.Date))
                {
                        <tr>
                            <td>@history.Date.ToShortDateString()</td>
                            <td>@history.Price €</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }


</section>