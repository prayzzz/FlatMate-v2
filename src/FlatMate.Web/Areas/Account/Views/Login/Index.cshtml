@model FlatMate.Web.Areas.Account.Data.LoginVm

@{
    Layout = "_LayoutBlank";
    ViewData["Title"] = "Login";
}

<section class="container centered-form login">

    <h1 style="text-align: center">FlatMate</h1>

    <form asp-area="Account" asp-controller="Login" method="post">

        <div class="alert-wrapper">
            @if (Model.Result != null)
            {
                if (Model.IsError)
                {
                    <div class="alert alert-error">@Model.Result.Message</div>
                }
                if (Model.IsSuccess)
                {
                    <div class="alert alert-success">@Model.Result.Message</div>
                }
            }
        </div>

        <fieldset>
            <input asp-for="ReturnUrl" type="hidden"/>

            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" autofocus required/>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" required/>
            </div>

            <div class="form-group align-right">
                <input class="btn-primary" type="submit" value="Login">
            </div>

        </fieldset>
    </form>

</section>
