@model FlatMate.Web.Areas.Account.Data.CreateUserVm

@{
    Layout = "_Layout";
    ViewData["Title"] = "Nutzer erstellen";
    ViewData["PageTitle"] = "Nutzer erstellen";
}

<section class="container">

    <div class="centered-form standard-box">
        <form asp-area="Account" asp-controller="Create" method="post">
            <fieldset>

                <div class="form-group">

                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" required />
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" required />
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" required />
                </div>

                <div class="form-group">
                    <label asp-for="PasswordConfirmation"></label>
                    <input asp-for="PasswordConfirmation" required />
                </div>

                <div class="form-group align-right">
                    <input class="btn-primary" type="submit" value="Erstellen">
                </div>

            </fieldset>
        </form>
    </div>

</section>
