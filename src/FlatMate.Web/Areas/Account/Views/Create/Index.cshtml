@model FlatMate.Web.Areas.Account.Data.CreateUserVm

@{
    Layout = "_Layout";
    ViewData["Title"] = "Nutzer erstellen";
    ViewData["PageTitle"] = "Nutzer erstellen";
    ViewData["MainClass"] = "account-create-index";
}

<section class="container">

    <div class="page-header">
        <h1 class="page-title">@ViewData["PageTitle"]</h1>
    </div>

</section>

<section class="container centered-form">

    <form asp-area="Account" asp-controller="Create" method="post" class="card">
        <div class="card-body">

            <div class="alert-wrapper">
                @if (Model.IsError)
                {
                    <div class="alert alert-error">@Model.Result?.Message</div>
                }
                @if (Model.IsSuccess)
                {
                    <div class="alert alert-success">@Model.Result?.Message</div>
                }
            </div>

            <fieldset>

                <div class="form-group">

                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" required/>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" required/>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" required/>
                </div>

                <div class="form-group">
                    <label asp-for="PasswordConfirmation"></label>
                    <input asp-for="PasswordConfirmation" required/>
                </div>

            </fieldset>
        </div>

        <div class="card-footer">
            <div class="d-flex">
                <input class="btn btn-primary ml-auto" type="submit" value="Erstellen">
            </div>
        </div>
    </form>

</section>