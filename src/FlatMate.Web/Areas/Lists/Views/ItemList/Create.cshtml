@model FlatMate.Web.Areas.Lists.Data.ItemListCreateVm

@{
    Layout = "_Layout";
    ViewData["Title"] = "Liste erstellen";
    ViewData["PageTitle"] = "Liste erstellen";
}

<section class="container">

    <div class="centered-form standard-box">
        <form asp-area="Lists" asp-controller="ItemList" asp-action="Create" method="post">
            <fieldset>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" required/>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description"/>
                </div>

                <div class="form-group">
                    <label asp-for="IsPublic"></label>
                    <input asp-for="IsPublic"/>
                </div>

                <div class="form-group align-right">
                    <input class="btn-primary" type="submit" value="Erstellen">
                </div>

            </fieldset>
        </form>
    </div>

</section>
